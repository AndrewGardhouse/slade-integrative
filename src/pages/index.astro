<Layout title="Slade Integrative Health">
	<main class="container max-w-screen-xl mx-auto px-4 md:px-0">
		<div class="flex flex-col md:flex-row py-20">
			<div class="w-full md:w-1/2 flex">
				<img src={Logo} alt="" class="w-4/5 m-auto">
			</div>
			<div class=" md:w-1/2 flex">
				<div class="my-auto">
					<h1 class="text-center md:text-left text-5xl font-extrabold mb-4">Slade Integrative Health</h1>
